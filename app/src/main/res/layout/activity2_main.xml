<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bacgroundnight">

    <Button
        android:id="@+id/btn_geri"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:background="@color/black"
        android:text="@string/btn_menu"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        app:cardCornerRadius="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#7AAAE6EC"
        >
        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:contentDescription="@string/weather"
            app:srcCompat="@drawable/weatherr"
            tools:ignore="ImageContrastCheck"

            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="TextView"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="0dp"/>
        <TextView
            android:id="@+id/derecev1"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"/>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        app:cardCornerRadius="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#7AAAE6EC">
        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:contentDescription="@string/weather"
            app:srcCompat="@drawable/weatherr"
            tools:ignore="ImageContrastCheck"

            />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="TextView"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_marginTop="0dp"/>
        <TextView
            android:id="@+id/derecev2"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="TextView"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:textSize="30sp"/>


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        app:cardCornerRadius="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#7AAAE6EC">
        <ImageView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:contentDescription="@string/weather"
            app:srcCompat="@drawable/weatherr"
            tools:ignore="ImageContrastCheck"

            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="TextView"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_marginTop="0dp"/>
        <TextView
            android:id="@+id/derecev3"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>